<!DOCTYPE html>
<html>
    <head>
        {% block head %}
            <meta charset="utf-8"/>
            <title>LibraryOfKnowledge</title>
            <link href='//fonts.googleapis.com/css?family=Lato:300' rel='stylesheet' type='text/css'>

            <script src="../../javascript/jquery-3.2.1.min.js" type="text/javascript"></script>

            <!-- Latest compiled and minified CSS -->
            <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">

            <!-- jQuery library -->
            <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

            <!-- Latest compiled JavaScript -->
            <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

            <meta name="viewport" content="width=device-width, initial-scale=1" />
            <!--[if lte IE 8]><script src="../../assets/js/ie/html5shiv.js"></script><![endif]-->
            <link rel="stylesheet" href="../../assets/css/main.css" />
            <!--[if lte IE 8]><link rel="stylesheet" href="../../assets/css/ie8.css" /><![endif]-->

            <link href="../../styleSheets/style.css" rel="stylesheet">

            <script src="../../javascript/script.js" type="text/javascript"></script>

        {% endblock %}
    </head>
    <body>
        {% macro trunc(txt, len) -%}
            {{ txt|length > len ? txt|slice(0, len) ~ 'â€¦' : txt }}
        {%- endmacro %}

        <!-- Content -->
        {% block content %}{% endblock %}

        <!-- Sidebar -->
        <div id="sidebar">

            <!-- Logo -->
            <h1 id="logo"><a href="/">LibraryOfKnowledge</a></h1>

            <!-- Nav -->
            <nav id="nav">
                <ul>
                    <li {% if current == "docs" %} class="current" {% endif %}><a href="/documentations/all/1">Documentations</a></li>
                    <li {% if current == "quests" %} class="current" {% endif %}><a href="/questions/all/1">Questions</a></li>
                    <li {% if current == "posts" %} class="current" {% endif %}><a href="/posts/new">New Post</a></li>
                    {% if user.loggedIn == true %}
                        <li {% if current == "profil" %} class="current" {% endif %}><a href="/users/single/{{ user.username }}">Profil</a></li>
                    {% else %}
                        <li {% if current == "profil" %} class="current" {% endif %}><a href="/login">Login</a></li>
                    {% endif %}
                </ul>
            </nav>

            <!-- Recent Post -->
            <section class="box recent-posts">
                <header>
                    <h2>Recent Posts</h2>
                </header>
                <ul>
                    {% for recentPost in recentPosts %}
                        <li><a href="/posts/single/{{ recentPost.id }}">{{ recentPost.title }}</a></li>
                    {% endfor %}
                </ul>
            </section>

            <!-- Copyright -->
            <ul id="copyright">
                <li>&copy; LibraryOfKnowledge.</li><li>Design: <a href="http://html5up.net">HTML5 UP</a></li>
            </ul>

        </div>

        <!-- Scripts -->
        <script src="../../assets/js/jquery.min.js"></script>
        <script src="../../assets/js/skel.min.js"></script>
        <script src="../../assets/js/util.js"></script>
        <!--[if lte IE 8]><script src="../../assets/js/ie/respond.min.js"></script><![endif]-->
        <script src="../../assets/js/main.js"></script>

    </body>
</html>

