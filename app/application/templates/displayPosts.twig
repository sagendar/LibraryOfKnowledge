{% extends "layout/index.twig" %}

{% block content %}
    <div id="content">
        <div class="inner">
            {% for displayedPost in displayedPosts %}

                <!-- Post -->
                <article class="box post post-excerpt">
                    <header>
                        <h2><a href="/posts/single/{{ displayedPost.post_id }}">{{ displayedPost.title }}</a></h2>
                        <p>{{ displayedPost.subTitle }}</p>
                    </header>
                    <div class="info">
                        <span class="date">{{ displayedPost.tstmp }}</span>
                        <ul class="stats">
                            <li><a href="/users/single/{{ displayedPost.username }}" >{{ displayedPost.username }}</a></li>
                        </ul>
                    </div>
                    <a href="/posts/single/{{ displayedPost.post_id }}" class="image featured"><img src="{{ displayedPost.titleImage }}" alt="" /></a>
                    <p>
                        {{ (displayedPost.content|length > 150 ? displayedPost.content|slice(0, 150) ~ '&hellip;' : displayedPost.content)|raw  }}
                    </p>
                </article>

            {% endfor %}

            <!-- Pagination -->
            <div class="pagination">
                <!--<a href="#" class="button previous">Previous Page</a>-->
                <div class="pages">
                    <a href="#" class="active">1</a>
                    <a href="#">2</a>
                    <a href="#">3</a>
                    <a href="#">4</a>
                    <span>&hellip;</span>
                    <a href="#">20</a>
                </div>
                <a href="#" class="button next">Next Page</a>
            </div>

        </div>
    </div>
{% endblock %}